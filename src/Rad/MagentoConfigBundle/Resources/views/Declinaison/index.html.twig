{% extends '::base.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <h1>Declinaison list ({{ pagination.getTotalItemCount }}) <a href="{{ path(base_route ~ '_create') }}" class="pull-right btn btn-success">Add <i class="glyphicon glyphicon-plus"></i></a></h1>
        <table class="table table-striped">
            <tr>
                <th>{{ knp_pagination_sortable(pagination, 'Id', 'e.id') }}</th>
                <th{% if pagination.isSorted('e.name') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(pagination, 'Name', 'e.name') }}</th>
                <th{% if pagination.isSorted('e.color.name') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(pagination, 'Color', 'e.color.name') }}</th>
                <th{% if pagination.isSorted('e.size.name') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(pagination, 'Size', 'e.size.name') }}</th>
                <th{% if pagination.isSorted('e.support.name') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(pagination, 'Support', 'e.support.name') }}</th>
            </tr>
            {% for item in pagination %}
                <tr>
                    <td><a href="{{ path(base_route ~ '_edit', {'id':item.id}) }}">{{ item.id }}</a></td>
                    <td>{{ item }}</td>
                    <td>{{ item.color }}</td>
                    <td>{{ item.size }}</td>
                    <td>{{ item.support }}</td>
                </tr>
            {% endfor %}
        </table>
        <div class="navigation">
            {{ knp_pagination_render(pagination) }}
        </div>
    </div>

{% endblock %}

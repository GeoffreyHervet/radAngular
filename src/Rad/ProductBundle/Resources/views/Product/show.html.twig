{% extends '::base.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <h1>
            {{ product }}
            <span style="font-size: 14px;">
                {% if product.online %}
                    <span class="label label-success">Online</span>
                {% else %}
                    <span class="label label-danger">Offline</span>
                {% endif %}
            </span>
            {#Edit <em>{{ item }}</em>#}
            <span class="btn-group pull-right">
                {#<a onclick="return false" class="btn btn-danger" disabled href="{{ path(base_route ~ '_delete', {'id': product.id}) }}">Delete <i class="glyphicon glyphicon-trash"></i></a>#}
                <a class="btn btn-primary" href="{{ path('rad_product_edit', {'id': product.id}) }}">Edit <i class="glyphicon glyphicon-pencil"></i></a>
                <a class="btn btn-info" href="{{ path('rad_product_fields', {'product': product.id}) }}">Edit fields <i class="glyphicon glyphicon-flag"></i></a>
            </span>
        </h1>
        {#{% include 'RadProductBundle:Product:_form.html.twig' %}#}
        {{ dump(product) }}
        <table class="table table-striped">
            <tr>
                <td><strong>SKU</strong></td>
                <td>{{ product.support.name ~ '_' ~ product.skuBegin }}</td>
            </tr>
            <tr>
                <td><strong>Price</strong></td>
                <td>
                    {% if product.specialPrice %}
                        <strong>{{ product.specialPrice }}</strong>
                        <span class="text-muted" style="text-decoration: line-through;">{{ product.sellPrice }}</span>
                    {% else %}
                        {{ product.sellPrice }}
                    {% endif %}
                </td>
            </tr>
            <tr>
                <td><strong>Cat√©gories</strong></td>
                <td>
                    <ul>
                        {% for category in product.categories %}
                            <li>{{ category }}</li>
                        {% endfor %}
                    </ul>
                </td>
            </tr>
            <tr>
                <td><strong>Online status</strong></td>
                <td>

                </td>
            </tr>
        </table>

        <hr />
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
                <li data-target="#myCarousel" data-slide-to="3"></li>
            </ol>
            <div class="carousel-inner" role="listbox">
                <div class="item active text-center">
                    <img src="{{ asset('uploads/' ~ product.thumbnailPath) }}" alt="thumbnail" height="300" style="margin: auto"/>
                    <div class="container"><div class="carousel-caption"><h1>Thumbnail</h1></div></div>
                </div>
                <div class="item">
                    <img src="{{ asset('uploads/' ~ product.smallImagePath) }}" alt="smallImage" height="300" style="margin: auto"/>
                    <div class="container"><div class="carousel-caption"><h1>Small Image</h1></div></div>
                </div>
                <div class="item">
                    <img src="{{ asset('uploads/' ~ product.imagePath) }}" alt="Image" height="300" style="margin: auto"/>
                    <div class="container"><div class="carousel-caption"><h1>Image</h1></div></div>
                </div>
                <div class="item">
                    <img src="{{ asset('uploads/' ~ product.flatImagePath) }}" alt="flatImage" height="300" style="margin: auto"/>
                    <div class="container"><div class="carousel-caption"><h1>Flat image</h1></div></div>
                </div>
            </div>
            <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
{% endblock %}